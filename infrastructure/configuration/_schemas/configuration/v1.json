{
  "type": "object",
  "title": "Configuration File Schema",
  "description": "General Configuration File Schema",
  "required": [
    "schema",
    "params"
  ],
  "properties": {
    "schema": {
      "$id": "#/properties/schema",
      "type": "string",
      "title": "Schema Version Identifier",
      "default": "",
      "pattern": "^([a-zA-Z]*\/v[0-9.])$",
      "examples": [
        "schemaName/v1"
      ]
    },
    "params": {
      "$id": "#/properties/params",
      "type": "object",
      "title": "Parameters Object",
      "default": {},
      "examples": [
        {
          "globalParams": {
            "environment": "someEnvironment"
          },
          "someParameter": "someValue",
          "anotherParameter": "anotherValue"
        }
      ],
      "required": ["globalParams"]
    }
  }
}