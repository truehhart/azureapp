{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentParams": {
      "type": "object",
      "metadata": {
        "description": "Global Environment Parameters"
      }
    }
  },
  "functions": [],
  "resources": [{
    "name": "[concat(parameters('environmentParams').environment, '-', parameters('environmentParams').stage, '-rg')]",
    "type": "Microsoft.Resources/resourceGroups",
    "apiVersion": "2021-04-01",
    "location": "[parameters('environmentParams').az.location]",
    "dependsOn": [],
    "tags": {
      "environment": "[parameters('environmentParams').environment]",
      "stage": "[parameters('environmentParams').stage]",
      "createdBy": "Azure Resource Manager Template"
    }
  }],
  "outputs": {
    "subscriptionName": {
      "type": "string",
      "value": "[subscription().displayName]"
    },
    "subscriptionId": {
      "type": "string",
      "value": "[subscription().subscriptionId]"
    }
  }
}